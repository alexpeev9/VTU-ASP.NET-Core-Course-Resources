@model BookProject.Data.Models.Genre

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    <dl class="row">
        @if (Model.Books != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Books)
            </dt>
            <dd class="col-sm-10">
                @foreach (var movie in Model.Books)
                {
                    <p>@Html.DisplayFor(modelItem => movie.Title)</p>
                }
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
