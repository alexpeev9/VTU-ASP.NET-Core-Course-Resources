@model PostCreateModel


<h1>Create</h1>
@if (ViewBag.ErrorMessage != null)
{
    <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
}
<form asp-controller="Posts" asp-action="Create" method="POST">
    <div class="form-group">
        <label>Author:</label>
        <input class="form-control" asp-for="@Model.Author" />
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>
    <div class="form-group">
        <label>Post:</label>
        <textarea class="form-control" rows="4" asp-for="@Model.Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>