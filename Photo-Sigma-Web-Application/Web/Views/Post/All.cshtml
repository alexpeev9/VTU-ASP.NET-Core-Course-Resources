@model IEnumerable<Post>

@{
    ViewData["Title"] = "All Posts";
}

@if (@ViewBag.VoteMessage != null)
{
    <div>
        <div class="d-flex justify-content-center">
            <h2 class="bg-success p-3 text-dark">@ViewBag.VoteMessage</h2>
        </div>
    </div>
}
<h1 class="text-center">Posts</h1>
<p>
    <a asp-controller="Post" asp-action="Create">
        Create a post
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img class="img-responsive" src="@Url.Content(item.ImageUrl)" alt="@item.Title" style="width:200px;height:200px" />
                </td>
                <td>
                    <p>
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </p>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}