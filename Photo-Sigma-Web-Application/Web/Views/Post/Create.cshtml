@model Post;

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<hr />
<form asp-controller="Post" asp-action="Create" method="POST">

    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <textarea asp-for="Description" class="form-control" rows="20"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.ImageUrl"></label>
        <input class="form-control" asp-for="@Model.ImageUrl" />
        <span asp-validation-for="ImageUrl"></span>
    </div>
    <div class="form-group text-center">
        <img id="ImagePreview" class="border-info rounded-top" style="width: 200px; height: 200px; visibility: hidden" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var output = document.getElementById('ImagePreview');
        $(document).ready(function () {
            output.src = $("#ImageUrl").val();
        })
        $("#ImageUrl").on("focus", () => {
            output.style.visibility = "visible";
        })
        $("#ImageUrl").on("change", function () {
            output.src = $(this).val();
        })
    </script>
}
